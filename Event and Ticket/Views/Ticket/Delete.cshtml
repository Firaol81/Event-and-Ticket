@model Ticket

@{
    ViewData["Title"] = "Delete Ticket";
}

<h1>@ViewData["Title"]</h1>
<h3>Are you sure you want to delete this ticket?</h3>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            Ticket Type:
        </dt>
        <dd>
            @Model.TicketType
        </dd>

        <dt>
            Price:
        </dt>
        <dd>
            @Model.Price
        </dd>

        <dt>
            Quantity Available:
        </dt>
        <dd>
            @Model.QuantityAvailable
        </dd>
        <!-- Add other ticket properties here -->
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.TicketId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </form>
</div>
